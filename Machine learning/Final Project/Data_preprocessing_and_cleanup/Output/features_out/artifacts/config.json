{
  "random_state": 42,
  "test_size": 0.2,
  "include_subject": false,
  "drop_date": true,
  "fill_missing_with_empty": true,
  "drop_exact_duplicates": true,
  "lowercase": true,
  "remove_urls_emails": true,
  "normalize_whitespace": true,
  "ngram_min": 1,
  "ngram_max": 2,
  "max_features": 20000,
  "min_df": 2,
  "max_df": 0.95,
  "stop_words": "english",
  "sublinear_tf": true,
  "strip_accents": "unicode",
  "produce_scaled": true,
  "scaler_with_mean": false
}